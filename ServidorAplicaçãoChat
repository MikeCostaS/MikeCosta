const express = require('express');
const http = require('http');
const socketIo = require('socket.io');
const path = require('path');

const app = express();
const server = http.createServer(app);
const io = socketIo(server);

// Servir arquivos est치ticos
app.use(express.static(path.join(__dirname, 'public')));

// Evento de conex칚o dos clientes
io.on('connection', (socket) => {
    console.log('游릭 Novo usu치rio conectado');

    // Quando algu칠m envia uma mensagem
    socket.on('chat message', (msg) => {
        console.log('游눫 Mensagem recebida:', msg);
        io.emit('chat message', msg); // envia para todos os conectados
    });

    socket.on('disconnect', () => {
        console.log('游댮 Usu치rio desconectado');
    });
});

// Iniciar o servidor
const PORT = process.env.PORT || 3000;
server.listen(PORT, () => {
    console.log(`游 Servidor rodando em http://localhost:${PORT}`);
});